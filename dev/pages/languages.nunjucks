{% set pagename = "Languages" %}
{% set pageRef = "/" %}

{% extends "layout.nunjucks" %}

{% block content %}

  <div class="content" style="padding-top:100px;">
    <div class="section__container">
      <div class="section__content" style="max-width:900px;">
        <h1>
          <span>
            Mandarin
            <br class="mobile-only">
            Practice
          </span>
        </h1>
        <h2 id="language-phrase" class="center" style="min-height:48px;font-weight:400;"></h2>
        <p id="language-helper" class="center" style="min-height:24px;"></p>
        <div class="flex-content">
          <div class="flex__small--12 flex__large--4">
            <a id="language-review" data-english="true" class="button center full" href="javascript:void(0)">Review</a>
          </div>
          <div class="flex__small--12 flex__large--4">
            <a id="language-toggle" class="button center full" href="javascript:void(0)">Translate</a>
          </div>
          <div class="flex__small--12 flex__large--4">
            <a id="language-next" data-english="true" class="button center full" href="javascript:void(0)">Next</a>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}